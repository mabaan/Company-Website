---
import Layout from '../layouts/BaseLayout.astro';
import NetworkMap from '../components/NetworkMap.tsx';
import { fetchLocations } from '../lib/airtable';

const locations = await fetchLocations();
---

<Layout
  title="G&C Network Map"
  description="Explore GC International's global presence on our interactive map."
  ogTitle="G&C Network Map"
  ogDescription="Explore GC International's global presence on our interactive map."
  ogUrl={Astro.url.href}
  ogImage="/global.svg"
>
  <section class="min-h-screen px-4 pt-32 pb-20">
    <h1 class="text-3xl font-bold text-center mb-8">Global Network Map</h1>
    <NetworkMap locations={locations} client:only="react" />
  </section>
  
</Layout>
