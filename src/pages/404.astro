---
import Layout from "../layouts/BaseLayout.astro";
---

<Layout title="Page Not Found" description="The page you're looking for does not exist." ogTitle="Page Not Found" ogDescription="The page you're looking for does not exist." ogUrl={Astro.url.href}>
  <section class="pt-32 pb-20 text-center min-h-screen flex flex-col items-center justify-center gap-6">
    <img src="/global.svg" alt="Not found" class="w-40 h-40" loading="lazy" />
    <h1 class="text-4xl font-bold">Page not found</h1>
    <p class="text-gray-600">Sorry, we couldn't find that page.</p>
    <a href="/" class="bg-[#0054a4] text-white px-6 py-3 rounded hover:bg-[#003d80] transition">Return Home</a>
  </section>
</Layout>
