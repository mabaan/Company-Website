---
import Layout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero";
import WhyChooseUs from "../components/WhyChooseUs";
import CTASection from "../components/CTASection";
import ScrollGauge from "../components/ScrollGauge";
import GearScroll from "../components/GearScroll.tsx";
---

<Layout title="GC International" padTop={false}>
  <!-- Hero + Valve Section -->
  <section
  id="hero"
  class="pt-24 md:pt-32 relative h-screen w-full overflow-hidden z-10 bg-waves flex flex-col md:flex-row items-center justify-between px-6 md:px-12"
>
    <!-- Left: Hero Text -->
    <div class="w-full md:w-1/2 z-10 text-white text-center md:text-left">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Seamless Innovation in Valve Solutions
      </h1>
      <p class="text-base md:text-lg mb-6">
        GC International connects vision to reality with world-class valve, flange, and flow control technology across the Middle East and beyond.
      </p>
      <a
        href="/contact"
        class="inline-block bg-red-500 hover:bg-red-600 text-white font-semibold px-6 py-3 rounded-lg shadow transition"
      >
        Explore Our Services
      </a>
    </div>

<Layout title="GC International">
  <main id="page-content" class="main-content">
    <Hero client:only="react" />
    <GearScroll client:only="react" direction="cw" />


    <WhyChooseUs />
    <GearScroll client:only="react" direction="ccw" />

    <CTASection />
    <ScrollGauge client:load />
  </main>
</Layout>
